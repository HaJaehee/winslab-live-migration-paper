# wifi adapter
auto wlan0
allow-hotplog wlan0
	iface wlan0 inet static
	hwaddress ether 20:00:00:00:02:10
        address 10.48.1.1
        netmask 255.0.0.0

auto wlan1
allow-hotplog wlan1
	iface wlan1 inet static
	hwaddress ether 20:00:00:00:02:11
        address 10.48.2.1
        netmask 255.0.0.0

auto wlan2
allow-hotplog wlan2
	iface wlan2 inet static
	hwaddress ether 20:00:00:00:02:12
        address 10.48.3.1
        netmask 255.0.0.0
